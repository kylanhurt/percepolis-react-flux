{
  "name": "percepolis",
  "version": "0.0.1",
  "description": "flux architecture w/ webpack, ES6, and react-router",
  "main": "index.js",
  "authors": [
    "Kylan Hurt (kylan@datagoniaweb.com)"
  ],
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "start": "npm run build && serve .",
    "build": "npm run build-js && npm run build-css",
    "watch": "npm run watch-js & npm run watch-css & serve .",
    "test": "npm run lint -s && npm run build",
    "build-css": "lessc style/*.less > build/build.css",
    "build-js": "browserify --extension=.jsx --extension=.js src/app.jsx > build/build.js --debug",
    "watch-js": "watchify --extension=.jsx --extension=.js src/app.jsx -o build/build.js --debug --verbose",
    "watch-css": "catw -w 'style/*.less' -c 'npm run build-css'",
    "lint-eslint": "eslint .",
    "lint-jscs": "jscs .",
    "lint": "npm run lint-eslint && npm run lint-jscs"
  },
  "dependencies": {
    "bootstrap": "^3.3.0",
    "flux": "^3.1.2",
    "jwt-decode": "^2.1.0",
    "object-assign": "^4.1.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-link-state": "^0.1.2",
    "react-mixin": "^3.0.5",
    "react-router": "^3.0.0",
    "formsy-react": "^0.19.0",    
    "reqwest": "^2.0.5",
    "superagent": "^3.3.1",
    "when": "^3.7.2"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "browser-sync": "^2.1.6",
    "browserify": "^13.1.1",
    "catw": "~1.0.1",
    "eslint": "^3.12.2",
    "nodemon": "^1.5.0",
    "rework": "^1.0.1",
    "rework-npm": "^1.0.0",
    "rework-npm-cli": "^0.1.1",
    "serve": "^1.4.0",
    "uglify-js": "^2.4.15",
    "watchify": "^3.8.0",
    "clean-css": "^3.1.9"
  }
}
